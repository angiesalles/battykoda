# General settings
DOMAIN_NAME=yourdomain.com
MAX_UPLOAD_SIZE_MB=100
# Set to True to disable static file caching (helpful during development)
DISABLE_STATIC_CACHING=False

# Django settings
# Generate this key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# Note: If your key contains $ characters, escape them with $$ for Docker Compose
SECRET_KEY=django_secret_key_goes_here
# Set to True for development, False for production
DEBUG=False

# AWS SES Email settings
AWS_SES_REGION_NAME=us-east-1
AWS_SES_ACCESS_KEY_ID=your_aws_access_key
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SES_CONFIGURATION_SET=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com